                        android:layout_margin="2dp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9."
                        android:textSize="30sp"
                        android:layout_margin="2dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_9"
                        android:hint="@string/prompt_item_name"
                        android:layout_margin="2dp"
                        android:imeOptions="actionNext"
                        android:padding="4dp"
                        android:inputType="text"
                        android:textSize="20sp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_9_price"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:hint="@string/prompt_item_price"
                        android:layout_margin="2dp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10."
                        android:textSize="30sp"
                        android:layout_margin="2dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_10"
                        android:hint="@string/prompt_item_name"
                        android:layout_margin="2dp"
                        android:imeOptions="actionNext"
                        android:padding="4dp"
                        android:inputType="text"
                        android:textSize="20sp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_10_price"
                        android:imeOptions="actionUnspecified"
                        android:inputType="numberDecimal"
                        android:hint="@string/prompt_item_price"
                        android:layout_margin="2dp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/update_bazar"
                    android:text="@string/update_bazar"
                    android:imeOptions="actionNext"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <include layout="@layout/option_bar"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
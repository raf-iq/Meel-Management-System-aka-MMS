<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAquaMarine"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/greeting"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/colorForestGreen"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:src="@drawable/mess_food_menu"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meal and Bazar Management System"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/colorRoyalBlue"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:src="@drawable/bazar_item"/>

    </LinearLayout>
    <!--<include layout="@layout/bottom_menu_bar"></include>-->
    <include layout="@layout/option_bar"/>
</LinearLayout>